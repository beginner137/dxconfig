set nocompatible              " required
filetype off                  " required

" show incomplete commands
set showcmd

" shows a menu when using tab completion
set wildmenu

set scrolloff=5

set hlsearch hl

set incsearch

set ignorecase
set smartcase

" turn on line numbering
set number

" set backup before save
set backup

"set bex=SOMETHING

set lbr

set ai
set si 
set bs=2

" Make a tab equal to 4 spaces
set shiftwidth=4
set tabstop=4

colo peachpuff
syntax on
